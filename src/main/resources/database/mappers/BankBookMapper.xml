<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.main.bankBook.BankBookDAO">
  	<select id="getList" resultType="com.iu.main.bankBook.BankBookDTO">
  		SELECT BOOKNUM,BOOKNAME,BOOKRATE,BOOKSALE FROM BANKBOOK ORDER BY BOOKNUM DESC
  	</select>
  
	<select id="getDetail" resultType="com.iu.main.bankBook.BankBookDTO" parameterType="com.iu.main.bankBook.BankBookDTO">
		SELECT * FROM BANKBOOK WHERE BOOKNUM=#{bookNum}
	</select>
	
	<insert id="setAdd" parameterType="com.iu.main.bankBook.BankBookDTO">
		INSERT INTO BANKBOOK VALUES (BANKBOOK_SEQ.NEXTVAL,#{bookName},#{bookRate},#{bookContents},#{bookSale})
	</insert>
	
	<delete id="setDelete" parameterType="java.lang.Long">
		DELETE BANKBOOK WHERE BOOKNUM=#{num}
	</delete>
	
	<delete id="setUpdate" parameterType="com.iu.main.bankBook.BankBookDTO">
		UPDATE BANKBOOK SET BOOKNAME=#{bookName},BOOKRATE=#{bookRate},BOOKCONTENTS=#{bookContents},BOOKSALE=#{bookSale}
		WHERE BOOKNUM=#{bookNum}
	</delete>
  </mapper>